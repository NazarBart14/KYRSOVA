<Window x:Class="KYRSOVA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KYRSOVA"
        mc:Ignorable="d"
        Title="Steam Game Parser" Height="480" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.Row="0" Grid.Column="1" x:Name="GamesListBox" Margin="5"
         ItemsSource="{Binding Games}" DisplayMemberPath="Name"
         SelectionMode="Extended" SelectionChanged="GamesListBox_SelectionChanged"/>

       
        <Button Height="45" Width="100" Grid.Row="1" Grid.Column="1" x:Name="MoveButton" Content="Move" Margin="10,5,160,5" Click="MoveButton_Click"/>

        <Button Height="45" Width="100" Grid.Row="1" Grid.Column="1" x:Name="ParseButton" Content="Parse" Margin="110,5,40,5" Click="ParseButton_Click"/>

        <Button Height="45" Width="75" Grid.Row="0" Grid.Column="0"  Margin="-20 -330 10 10" Content="Your Library" Click="LibraryButton_Click" />

    </Grid>
</Window>
