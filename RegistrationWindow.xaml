<Window x:Class="KYRSOVA.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KYRSOVA"
        mc:Ignorable="d"
        Title="Registration" Height="250" Width="280" Background="#88BDBC">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Registration" FontSize="20" FontWeight="Bold" Margin="0 0 0 20" Width="119" Foreground="#264E58"/>
            <TextBox x:Name="txtUsername" Width="200" Height="30" Margin="0 0 0 10" Background="#264E58" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Width="200" Height="30" Margin="0 0 0 10" Background="#264E58" Foreground="White"/>
            <Button x:Name="btnRegister" Content="Register" Width="100" Height="30" Click="btnRegister_Click" Background="#4F4A41" Foreground="White"/>
        </StackPanel>
 
    </Grid>
</Window>