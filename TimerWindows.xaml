<Window x:Class="KYRSOVA.TimerWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KYRSOVA"
        mc:Ignorable="d"
        Title="TimerWindows" Height="140" Width="260" Background="#88BDBC">
    <Grid Margin="0 0 0 0">
        <Label x:Name="timerLabel" FontSize="24" Content="00:00:00" Margin="10 10 140 50" Background="#264E58" Foreground="White"/>
        <Button x:Name="startButton" Content="Start" Height="25" Width="70" Margin="0 60 150 0" Click="startButton_Click" Background="#4F4A41" Foreground="White"/>
        <Button x:Name="stopButton" Content="Stop" Height="25" Width="70" Margin="0 60 0 0" Click="stopButton_Click" Background="#4F4A41" Foreground="White"/>
        <Button x:Name="resetButton" Content="Reset" Height="25" Width="70" Margin="150 60 0 0" Click="resetButton_Click" Background="#4F4A41" Foreground="White"/>
    </Grid>
</Window>
    